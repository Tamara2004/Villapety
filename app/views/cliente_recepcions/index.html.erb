<h1>Clientes Recepciones</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Recepcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cliente_recepcions.each do |cliente_recepcion| %>
      <tr>
        <td><%= cliente_recepcion.cliente.nombre%></td>
        <td><%= cliente_recepcion.recepcion.nombre %></td>
        <td><%= link_to 'Mostrar', cliente_recepcion %></td>
        <td><%= link_to 'Editar', edit_cliente_recepcion_path(cliente_recepcion) %></td>
        <td><%= link_to 'Eliminar', cliente_recepcion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Recepciones', new_cliente_recepcion_path %>
