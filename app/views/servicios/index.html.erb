<h1>Servicios</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Tratamiento</th>
      <th>Valor</th>
      <th>Cita</th>
      <th>Producto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicios.each do |servicio| %>
      <tr>
        <td><%= servicio.tratamiento %></td>
        <td><%= servicio.valor %></td>
        <td><%= servicio.cita %></td>
        <td><%= servicio.producto %></td>
        <td><%= link_to 'Mostrar', servicio %></td>
        <td><%= link_to 'Editar', edit_servicio_path(servicio) %></td>
        <td><%= link_to 'Eliminar', servicio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Servicio', new_servicio_path %>
